<h1>Account analysis</h1>

<table>
<thead>
<tr>
  <th>Total income</th>
  <th>Total outgoings</th>
  <th>Balance</th>
  <th>Round-ups</th>
</tr>
</thead>
<tbody>
<tr>
    <td><p>£<%= @account.account_income %></p></td>
    <td><p>£<%= @account.account_outgoings %></p></td>
    <td><p>£<%= @account.account_balance %></p></td>
    <td><p>£<%= @account.calculate_round_up_value() %></p></td>
</tr>
</tbody>
</table>

<br><br><hr>  

<table>
  <thead>
    <tr>
        <th>Tag</th>
        <th>Expenditure value (£)</th>
    </tr>
  </thead>
  <tbody>
        <% @tags.each do |tag| %>
        <tr><td><%= tag.description %></td>
        <% end %>
        <% @tags.each do |tag| %>
        <td> <%= @account.account_outgoings_by_tag(tag.id) %> </td></tr>
        <% end %>
  </tbody>
</table>








